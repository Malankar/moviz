<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
    <context-param>
        <param-name>apiKey</param-name>
        <param-value>avdhut123</param-value>
    </context-param>
    <listener>
        <listener-class>com.anywhere.FirebaseContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>movies</servlet-name>
        <servlet-class>com.anywhere.servlets.Movies</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>movies</servlet-name>
        <url-pattern>/movies</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>auth</servlet-name>
        <servlet-class>com.anywhere.servlets.Authentication</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>seats</servlet-name>
        <servlet-class>com.anywhere.servlets.Seats</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>seats</servlet-name>
        <url-pattern>/seats</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>com.anywhere.servlets.Search</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/movies/search</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>filter</servlet-name>
        <servlet-class>com.anywhere.servlets.Filter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>filter</servlet-name>
        <url-pattern>/movies/filter</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>title</servlet-name>
        <servlet-class>com.anywhere.servlets.SearchTitles</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>title</servlet-name>
        <url-pattern>/movies/title</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
